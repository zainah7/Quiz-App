  {
    question: "What is the significance of the Kaaba in Mecca?",
    options: [
      "Muslim political center",
      "Muslim economic center",
      "Muslim spiritual center",
      "Muslim educational center",
    ],
    correctAnswer: "Muslim spiritual center",
