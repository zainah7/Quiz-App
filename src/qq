// Accessing a random question from the array
const randomQuestion =
  islamicQuizQuestions[Math.floor(Math.random() * islamicQuizQuestions.length)];

console.log("Question: " + randomQuestion.question);
console.log("Options: " + randomQuestion.options.join(", "));
console.log("Correct Answer: " + randomQuestion.correctAnswer);
